{
  "name": "@puresamari/spb",
  "version": "0.7.4",
  "description": "A simple build tool for quick website development.",
  "main": "./lib/cli/index.js",
  "bin": {
    "spb": "lib/cli/index.js"
  },
  "scripts": {
    "spb": "npx node -r ts-node/register -r tsconfig-paths/register cli/index.ts --verbose ",
    "start": "nodemon",
    "start:watch": "nodemon --config nodemon.watch.json",
    "start:dev-server": "nodemon --config nodemon.dev-server.json",
    "start:init": "nodemon --config nodemon.init.json",
    "page": "npm run spb -- -c examples/spb-page/config.spb.json",
    "page:watch": "npm run spb -- watch -c examples/spb-page/config.spb.json",
    "page:dev-server": "npm run spb -- dev-server -c examples/spb-page/config.spb.json",
    "page:docs": "typedoc",
    "create": "npm run build && npm run test",
    "build": "rm -rf lib && tsc -p . && cp -R cli/dev-server/web-server/templates lib/cli/dev-server/web-server && npm run build:schema",
    "build:schema": "typescript-json-schema --titles builder/definitions/builder-options.ts IBuilderOptions -o lib/config.schema.json",
    "test": "./test-cli.sh",
    "refresh": "rm -rf ./node_modules ./package-lock.json && npm install",
    "prepublish": "npm run build && npm run test",
    "publish-pages": "npm run page && ts-node ./publish-pages.ts"
  },
  "keywords": [
    "buildsystem",
    "typescript",
    "twig",
    "scss",
    "sass",
    "css",
    "bundle",
    "builder",
    "simple",
    "javascript",
    "pug",
    "postcss",
    "website",
    "webpage"
  ],
  "author": "Simon Rothert <puresamari@gmail.com>",
  "bugs": {
    "url": "https://github.com/puresamari/spb/issues"
  },
  "homepage": "https://github.com/puresamari/spb#readme",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/cli-progress": "^3.7.0",
    "@types/gh-pages": "^3.0.0",
    "@types/glob": "^7.1.3",
    "@types/js-beautify": "^1.11.0",
    "@types/lodash": "^4.14.168",
    "@types/mkdirp": "^1.0.1",
    "@types/node": "^14.0.20",
    "@types/nodemon": "^1.19.0",
    "@types/pug": "^2.0.4",
    "@types/resolve": "^1.17.1",
    "@types/rimraf": "^3.0.0",
    "@types/twig": "^1.12.3",
    "@types/ws": "^7.2.6",
    "alpinejs": "^2.5.0",
    "fast-sha256": "^1.3.0",
    "gh-pages": "^3.1.0",
    "lodash": "^4.17.21",
    "nodemon": "^2.0.4",
    "tailwindcss": "^1.6.0",
    "three": "^0.121.1",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "typedoc": "^0.19.1",
    "typescript": "^3.9.6",
    "typescript-json-schema": "^0.42.0"
  },
  "directories": {
    "example": "examples",
    "lib": "lib"
  },
  "dependencies": {
    "@puresamari/ts-bundler": "^0.1.0",
    "autoprefixer": "^9.8.6",
    "chalk": "^4.1.0",
    "cli-progress": "^3.8.2",
    "commander": "^6.0.0",
    "figlet": "^1.4.0",
    "glob": "^7.1.6",
    "js-beautify": "^1.11.0",
    "mkdirp": "^1.0.4",
    "postcss": "^7.0.32",
    "postcss-scss": "^3.0.2",
    "precss": "^4.0.0",
    "pretty": "^2.0.0",
    "pug": "^3.0.0",
    "resolve": "^1.17.0",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.2",
    "tslib": "1.13.0",
    "twig": "^1.15.1",
    "ws": "^7.3.1"
  }
}
